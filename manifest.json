{
    "manifest_version": 2,
    "name": "myclock",
    "version": "0.0.1",
    "description": "a light plugin to check weather and show your working hours.[auther: anyuan zhang,email: zh1995@foxmail.com]",
    "icons": {
        "16": "images/1.png",
        "48": "images/1.png",
        "128": "images/1.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/1.png",
            "38": "images/1.png"
        },
        "default_title": "myclock",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
        // "persistent":true
    },
    "options_page": "options.html",
    "permissions": [
        "http://int.dpool.sina.com.cn/iplookup/iplookup.php",
        "http://api.openweathermap.org/data/2.5/forecast?q=*"
      ]
}